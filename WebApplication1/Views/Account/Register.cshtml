
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/_LayoutPage1.cshtml";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
@using WebApplication1.Controllers

<div class="main">
    <form action="CheckAccount" method="POST" class="form" id="form-login">
        <h3 class="heading">Thành viên đăng ký</h3>
        <p class="desc">Nhóm xe ôm ❤️</p>

        <div class="spacer"></div>

        <div class="form-group">
            <label for="HoTen" class="form-label">Họ và tên</label>
            <input id="HoTen" name="HoTen" rules="required" type="text" placeholder="VD: Nguyễn Phi Nam" class="form-control">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="DiaChi" class="form-label">Địa chỉ</label>
            <input id="DiaChi" name="DiaChi" rules="required" type="text" placeholder="VD: Trần Duy Hưng Street" class="form-control">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="UserName" class="form-label">Tên đăng Nhập</label>
            <input id="UserName" name="UserName" rules="required" type="text" placeholder="VD: Sơn Đặng" class="form-control">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input id="email" name="Email" rules="required|email" type="text" placeholder="VD: email@domain.com" class="form-control">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="password" class="form-label">Mật khẩu</label>
            <input id="password" name="Password" rules="required|min:6" type="password" placeholder="Nhập mật khẩu" class="form-control">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="phone" class="form-label">Số điện thoại</label>
            <input id="phone" name="Phone" rules="required|number" type="text" placeholder="Nhập SĐT" class="form-control">
            <span class="form-message"></span>
        </div>

        <div class="form-group">
            <label for="birthday" class="form-label">Ngày sinh</label>
            <input id="birthday" name="BirthDay" type="date" class="form-control">
            <span class="form-message"></span>
        </div>
        <input type="submit" value="SIGN UP">
        <span style="display: block; font-size: 1.2rem; height: 50px; padding: 12px 0;">Quay lại <a href="/Account/Login">đăng nhập</a></span>
        @if (AccountController.errorMess.Length > 0)
        {
            <div class="spacer"></div>
            <span style="color: #f33a58;">@AccountController.errorMess</span>
            AccountController.errorMess = "";
        }
        @if (AccountController.isSuccess)
        {
            <div class="spacer"></div>
            <span style="color: #1dbfaf;">Tạo thành công</span>
            AccountController.isSuccess = false;
        }
    </form>
</div>